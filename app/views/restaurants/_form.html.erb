<%= simple_form_for(restaurant) do |f| %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :category, collection: Restaurant::RESTAURANT_CATEGORY, include_blank: false %>
    <%= f.input :phone_number %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
